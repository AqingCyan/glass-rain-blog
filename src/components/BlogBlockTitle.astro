---
const { year, count } = Astro.props
const yearList = year.split('')
const lastOne = yearList.pop()
---

<div class="blog-block-title">
  <div class="year">
    <span>{yearList.join('')}</span><span>{lastOne}</span>
  </div>
  <div class="count">
    <span>共{count}篇文章</span>
    <span>{count} articles in total</span>
  </div>
</div>

<style>
  .blog-block-title {
    display: flex;
    align-items: center;
    margin: 2.8rem 0 2.2rem;
    padding-bottom: 1.3rem;
    border-bottom: 1px solid var(--line-color);
  }

  .blog-block-title .year {
    margin-right: 1rem;
    font-size: 3.625rem;
    line-height: 3.625rem;
    font-weight: 500;
    color: var(--primary-color);
  }

  .blog-block-title .year span:last-child {
    color: var(--theme-color);
  }

  .blog-block-title .count {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 0.25rem;
    font-size: 1.125rem;
    font-weight: lighter;
    line-height: 1.125rem;
    color: var(--second-color);
  }

  .blog-block-title .count span:first-child {
    margin-bottom: 0.55rem;
  }

  @media screen and (max-width: 500px) {
    .blog-block-title {
      margin: 1.5rem 0 2rem;
    }

    .blog-block-title .year {
      font-size: 3.1rem;
    }

    .blog-block-title .count {
      font-size: 1rem;
      line-height: 1rem;
    }
  }
</style>
