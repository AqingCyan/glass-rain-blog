---
import dayjs from 'dayjs'
import BaseLayout from './BaseLayout.astro'

const { frontmatter, headings } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title}>
  <h1 class="blog-title">{frontmatter.title}</h1>
  <p class="blog-info">
    By <em>{frontmatter.author}</em>
    <span class="date">{dayjs(frontmatter.pubDate).format('YYYY/MM/DD')}</span>
    {frontmatter.tags.map((tag) => <span class="tag">{tag}</span>)}
  </p>
  <article class="article">
    <slot />
  </article>
  <div class="toc-close">
    {
      headings
        .filter((head) => [2, 3].includes(head.depth))
        .map((head) => (
          <p>
            <span style={`width: ${(3 / head.depth) * 1}rem; margin-right: ${2 - (3 / head.depth) * 1}rem`} />
            <a href={`#${head.slug}`}>{head.text}</a>
          </p>
        ))
    }
  </div>

  <div class="toc-open">
    {
      headings
        .filter((head) => [2, 3].includes(head.depth))
        .map((head) => (
          <p>
            <span style={`width: ${(3 / head.depth) * 1}rem; margin-right: ${2 - (3 / head.depth) * 1}rem`} />
            <a href={`#${head.slug}`}>{head.text}</a>
          </p>
        ))
    }
  </div>
</BaseLayout>

<style is:global>
  .blog-title {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--primary-color);
  }

  .blog-info {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin: 1rem 0 2.5rem;
    font-size: 0.8125rem;
    color: var(--primary-color);
  }

  .blog-info .date {
    margin: 0 0.5rem;
    font-family: 'ABeeZee';
    color: var(--second-color);
  }

  .blog-info .tag {
    margin: 0.3rem 0.2rem;
    padding: 0.125rem 0.75rem;
    box-sizing: border-box;
    border: 1px solid var(--theme-color);
    border-radius: 2px;
    font-size: 0.75rem;
    color: var(--theme-color);
  }

  .toc-close,
  .toc-open {
    position: fixed;
    top: 30%;
    right: 1rem;
  }

  .toc-open {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
  }

  .toc-close p a {
    opacity: 0;
  }

  .toc-open p,
  .toc-close p {
    display: flex;
    align-items: center;
    margin: 0;
    font-size: 0.75rem;
    line-height: 1.875rem;
    color: var(--toc-color);
  }

  .toc-open p span,
  .toc-close p span {
    display: block;
    height: 0.375rem;
    background: #d9d9d9;
    border-radius: 0.1875rem;
  }

  .toc-close p span {
    width: 0.375rem !important;
  }

  .toc-open p a,
  .toc-close p a {
    color: unset;
    text-decoration: none;
    width: 10rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .toc-open p a::after {
    display: none;
  }

  .article h1,
  .article h2,
  .article h3,
  .article h4,
  .article h5,
  .article h6 {
    position: relative;
    font-weight: 400;
    color: var(--primary-color);
  }

  .article h1 a[aria-hidden='true'],
  .article h2 a[aria-hidden='true'],
  .article h3 a[aria-hidden='true'],
  .article h4 a[aria-hidden='true'],
  .article h5 a[aria-hidden='true'],
  .article h6 a[aria-hidden='true'] {
    position: absolute;
    left: -1.2rem;
    width: 1.2rem;
    opacity: 0;
    transition: 0.2s;
  }

  .article h1:hover a[aria-hidden='true'],
  .article h2:hover a[aria-hidden='true'],
  .article h3:hover a[aria-hidden='true'],
  .article h4:hover a[aria-hidden='true'],
  .article h5:hover a[aria-hidden='true'],
  .article h6:hover a[aria-hidden='true'] {
    opacity: 0.8;
  }

  .article h1 a[aria-hidden='true']::after,
  .article h2 a[aria-hidden='true']::after,
  .article h3 a[aria-hidden='true']::after,
  .article h4 a[aria-hidden='true']::after,
  .article h5 a[aria-hidden='true']::after,
  .article h6 a[aria-hidden='true']::after {
    display: none;
  }

  .article h1 {
    font-size: 1.75rem;
  }
  .article h2 {
    font-size: 1.375rem;
  }

  .article h3 {
    font-size: 1.125rem;
  }

  .article h4 {
    font-size: 1.1rem;
  }

  .article h5 {
    font-size: 1rem;
  }

  .article h6 {
    font-size: 0.9rem;
  }

  .article p {
    font-size: 1rem;
    line-height: 2rem;
    color: var(--primary-color);
  }

  .article a {
    position: relative;
    color: unset;
    text-decoration: none;
  }

  .article a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -0.0625rem;
    width: 100%;
    height: 0.0625rem;
    border-bottom: 0.0625rem solid;
  }

  .article blockquote {
    position: relative;
    margin: 0;
    padding-left: 0.875rem;
    box-sizing: border-box;
    color: var(--blockquote-color);
  }

  .article img {
    width: 100%;
  }

  .article blockquote p,
  .article blockquote li {
    color: unset;
  }

  .article blockquote::before {
    content: '';
    position: absolute;
    left: 0;
    display: block;
    height: 100%;
    width: 0.25rem;
    background: #c1c1c1;
    border-radius: 0.125rem;
  }

  .article li {
    font-size: 1rem;
    line-height: 1.95rem;
    color: var(--primary-color);
  }

  .article ul li::marker {
    color: #d9d9d9;
  }

  .article code {
    font-family: DM Mono, Input Mono, Fira Code, monospace;
    font-size: 0.9rem;
  }

  .article p code,
  .article li code {
    font-weight: bold;
  }

  .article p code::before,
  .article li code::before,
  .article p code::after,
  .article li code::after {
    content: '`';
  }

  @media screen and (max-width: 1050px) {
    .toc-close,
    .toc-open {
      display: none;
    }
  }
</style>

<script>
  const elements = [...(document.getElementsByClassName('icon-link') || [])]
  elements.forEach((ele) => (ele.innerHTML = '#'))

  const tocCloseEle = document.getElementsByClassName('toc-close')[0] as HTMLElement
  const tocOpenEle = document.getElementsByClassName('toc-open')[0] as HTMLElement
  tocCloseEle.addEventListener('mouseover', () => {
    tocCloseEle.style.opacity = '0'
    tocOpenEle.style.opacity = '1'
  })
  tocCloseEle.addEventListener('mouseout', () => {
    tocCloseEle.style.opacity = '1'
    tocOpenEle.style.opacity = '0'
  })
</script>
